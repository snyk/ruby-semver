{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "es2020",
    "lib": ["es2020"],
    "module": "commonjs",
    "declaration": true,
    "sourceMap": true,
    "pretty": true,
    "importHelpers": true,
    "strict": false,
    "allowJs": false,
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "noImplicitReturns": true
  },
  "include": ["./lib/**/*"]
}
